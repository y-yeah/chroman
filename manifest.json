{
  "name": "Chroman",
  "version": "1.0",
  "description": "Chrome Extention that calculates the loading time of a website",
  "permissions": [
    "storage",
    "declarativeContent",
    "tabs",
    "tts",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "Chroman the Calculator",
    "default_icon": {
      "48": "./img/icon48.png",
      "128": "./img/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": ["contentScript.js"]
}
